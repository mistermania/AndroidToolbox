<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.HomeActivity">
    <ImageView
            android:layout_width="191dp"
            android:layout_height="61dp" app:srcCompat="@drawable/isen"
            android:id="@+id/imageView2"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="Bonjour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4" android:textSize="24sp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" app:layout_constraintHorizontal_bias="0.498"/>
    <ImageButton
            android:layout_width="70dp"
            android:layout_height="70dp" app:srcCompat="@android:drawable/stat_notify_chat"
            android:id="@+id/cycleDeVie"
            android:background="@color/colorAccent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="80dp" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/textView4"/>
    <TextView
            android:text="Cycle de vie"
            android:layout_width="113dp"
            android:layout_height="29dp"
            android:id="@+id/textView5" android:textAlignment="center"
            android:textSize="18sp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/cycleDeVie"
            app:layout_constraintStart_toStartOf="@+id/cycleDeVie"
            app:layout_constraintEnd_toEndOf="@+id/cycleDeVie"/>
    <ImageButton
            android:layout_width="70dp"
            android:layout_height="70dp" app:srcCompat="@android:drawable/stat_notify_sdcard"
            android:id="@+id/sauvegarde"
            android:background="@color/colorAccent" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/textView4" android:layout_marginEnd="80dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="Sauvegarde"
            android:layout_width="102dp"
            android:layout_height="26dp"
            android:id="@+id/textView6" android:textAlignment="center"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@+id/sauvegarde"
            app:layout_constraintEnd_toEndOf="@+id/sauvegarde"
            app:layout_constraintHorizontal_bias="0.468" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/sauvegarde"/>
    <ImageButton
            android:layout_width="70dp"
            android:layout_height="70dp" app:srcCompat="@android:drawable/stat_sys_speakerphone"
            android:id="@+id/permissions"
            android:background="@color/colorAccent" app:layout_constraintStart_toStartOf="@+id/cycleDeVie"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/textView5" app:layout_constraintEnd_toEndOf="@+id/cycleDeVie"
            app:layout_constraintHorizontal_bias="1.0"/>
    <ImageButton
            android:layout_width="70dp"
            android:layout_height="70dp" app:srcCompat="@android:drawable/stat_sys_download"
            android:id="@+id/download"
            android:background="@color/colorAccent"
            app:layout_constraintStart_toStartOf="@+id/sauvegarde"
            app:layout_constraintEnd_toEndOf="@+id/sauvegarde" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/textView6" app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:text="Permissions"
            android:layout_width="103dp"
            android:layout_height="22dp"
            android:id="@+id/textView7" android:textSize="18sp"
            android:textAlignment="center"
            app:layout_constraintStart_toStartOf="@+id/permissions"
            app:layout_constraintEnd_toEndOf="@+id/permissions" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/permissions"/>
    <TextView
            android:text="WebServices"
            android:layout_width="111dp"
            android:layout_height="22dp"
            android:id="@+id/textView8" android:textSize="18sp"
            android:textAlignment="center"
            app:layout_constraintStart_toStartOf="@+id/download" app:layout_constraintEnd_toEndOf="@+id/download"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/download"/>
    <ImageButton
            android:layout_width="140dp"
            android:layout_height="70dp" app:srcCompat="@android:drawable/ic_notification_clear_all"
            android:id="@+id/disconnect"
            android:background="@color/colorAccent"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/textView7" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="@+id/permissions" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="@+id/download"/>
    <TextView
            android:text="Deconnexion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/disconnecttext" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/disconnect" android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="@+id/disconnect"
            app:layout_constraintStart_toStartOf="@+id/disconnect"/>
</android.support.constraint.ConstraintLayout>